<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextBody" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_size_label</item>
    </style>

    <style name="TextBodyBold" parent="@style/TextBody">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTitle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="TextTitleBold" parent="@style/TextTitle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_margin">@dimen/margin_fab</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="rippleColor">@color/colorPollution</item>
    </style>

    <style name="CustomCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="cardCornerRadius">@dimen/padding_default</item>
        <item name="cardElevation">0dp</item>
    </style>

</resources>
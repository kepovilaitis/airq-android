<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/colorAccentTint</item>
        <item name="android:windowTitleStyle">@style/Dialog.Title</item>
        <item name="android:textAppearanceSmall">@style/Dialog.Text</item>
        <item name="android:buttonStyle">@style/DialogButtonPositive</item>
    </style>

    <style name="Dialog.Title">
        <item name="android:textSize">@dimen/text_size_dialog_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <style name="Dialog.Text">
        <item name="android:textSize">@dimen/text_size_dialog_text</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <style name="DialogButtonPositive">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_dialog_button</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

</resources>
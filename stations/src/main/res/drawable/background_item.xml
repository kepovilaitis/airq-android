<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="@color/colorAccent">

    <item>

        <shape
                android:bottom="8dp"
                android:top="8dp"
                android:left="8dp"
                android:right="8dp"
